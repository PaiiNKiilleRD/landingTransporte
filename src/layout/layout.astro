---
interface Props {
  title: string;
}
const { title } = Astro.props;

import ViewTransitions from "astro/components/ViewTransitions.astro";

import Navbar from "@/sections/navbar.astro";
import Sidemenu from "@/sections/sidemenu.astro";
import Footer from "@/sections/footer.astro";
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <!-- Fuente -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap"
      rel="stylesheet"
    />
    <!--  -->

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <!--  BARRA DE NAVEGACION  -->
    <header>
      <Navbar />
      <Sidemenu />
    </header>
    <!-- BODY -->
    <main>
      <slot />
    </main>
    <Footer />

    <style is:global>
      body {
        @apply bg-[#f6f6f6] font-lato dark:bg-black dark:text-[#f6f6f6];
      }

      .h1 {
        @apply text-[48px] xl:text-[80px] leading-[1.1];
      }

      .h2 {
        @apply text-[36px] xl:text-[48px] leading-[1.1];
      }

      .h3 {
        @apply text-[20px] xl:text-[24px] leading-[1.1];
      }
    </style>
  </body>
</html>
