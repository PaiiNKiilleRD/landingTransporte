---
import Layout from "../layout/layout.astro";

import { Icon } from "astro-iconify";

import Image from "astro/components/Image.astro";
import image1 from "@/assets/servicios/mudanza.jpg";
import image2 from "@/assets/servicios/acarreo.jpg";
import image3 from "@/assets/servicios/embalaje.jpg";
---

<Layout title="Transporte Sanchez | Inicio">
  <section
    class="container flex flex-col items-center justify-center w-full h-screen gap-5"
  >
    <h1 class="block py-5 font-bold text-center h2">
      Servicios de <br class="block md:hidden" /> Transporte Sanchez
    </h1>
    <article class="flex flex-col items-center justify-center">
      <h2 class="mb-5 font-medium h3">Mudanzas</h2>
      <Image
        src={image1}
        class="w-[240px] object-fill shadow-lg rounded-md"
        alt="A description of my image."
      />
    </article>
    <article class="flex flex-col items-center justify-center">
      <h2 class="mb-5 font-medium h3">Acarreos</h2>
      <Image
        src={image2}
        class="w-[240px] object-fill shadow-lg rounded-md"
        alt="A description of my image."
      />
    </article>
    <article class="flex flex-col items-center justify-center">
      <h2 class="mb-5 font-medium h3">Embalaje</h2>
      <Image
        src={image3}
        class="w-[240px] object-fill shadow-lg rounded-md"
        alt="A description of my image."
      />
    </article>
  </section>
</Layout>
