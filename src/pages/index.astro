---
import Layout from "../layout/layout.astro";
import Button from "@/components/button.astro";
import Sidemenu from "@/sections/sidemenu.astro";

import { Icon } from "astro-iconify";

import Image from "astro/components/Image.astro";
import heroImage from "@/assets/hero/cajas.jpg";
---

<Layout title="Servicios de Transporte Sanchez | Inicio">
  <section
    class="container flex flex-col items-center justify-center w-full h-screen md:justify-between md:flex-row"
  >
    <article
      class="flex flex-col items-center justify-center order-2 md:mr-2 md:items-start md:order-0"
    >
      <h1
        class="block w-full mb-5 text-4xl font-medium text-center md:text-left md:text-5xl lg:text-6xl"
      >
        Servicios de <br class="block" /> Transporte Sanchez
      </h1>
      <h2 class="w-full mb-5 font-bold text-center md:text-left h2">
        Nos encargamos <br class="hidden xl:inline" /> de tu embalaje
      </h2>
      <p class="text-center md:text-left text-black/80 h3">
        Muebles, Cristales y todo tipo de Material Delicadoâ€¦
      </p>
      <Button
        class="mt-10 bg-green-500 md:mt-5 xl:mt-8 group hover:text-myWhite hover:bg-sky-600"
        ><a href="https://wa.me/18294221826" class="flex gap-x-2"
          >Contactanos
          <slot name="after">
            <Icon
              name="fa-brands:whatsapp"
              class="text-2xl transition-all duration-300 ease-in-out group-hover:text-myWhite"
              size={24}
            /></slot
          ></a
        >
      </Button>
    </article>
    <article class="order-1 md:order-2 w-[250px] md:w-[320px] xl:w-[500px]">
      <Image
        src={heroImage}
        class="w-full mb-12 rounded-lg shadow-2xl md:mb-0"
        alt="A description of my image."
      />
    </article>
  </section>
</Layout>
